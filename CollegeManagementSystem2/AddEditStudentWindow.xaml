<Window x:Class="CollegeManagementSystem2.AddEditStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CollegeManagementSystem2"
        mc:Ignorable="d"
        Title="AddEditStudentWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Full Name:" Grid.Row="0" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <TextBox x:Name="txtFullName" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5"/>

        <Label Content="Birth Date:" Grid.Row="1" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <DatePicker x:Name="dpBirthDate" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5"/>

        <Label Content="Gender:" Grid.Row="2" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <ComboBox x:Name="cmbGender" Grid.Row="2" Grid.Column="1" Margin="0,0,0,5">
            <ComboBoxItem Content="Male"/>
            <ComboBoxItem Content="Female"/>
        </ComboBox>

        <Label Content="Group Name:" Grid.Row="3" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <TextBox x:Name="txtGroupName" Grid.Row="3" Grid.Column="1" Margin="0,0,0,5"/>

        <Label Content="Enrollment Date:" Grid.Row="4" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <DatePicker x:Name="dpEnrollmentDate" Grid.Row="4" Grid.Column="1" Margin="0,0,0,5"/>

        <Label Content="Address:" Grid.Row="5" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <TextBox x:Name="txtAddress" Grid.Row="5" Grid.Column="1" Margin="0,0,0,5"/>

        <Label Content="Phone:" Grid.Row="6" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <TextBox x:Name="txtPhone" Grid.Row="6" Grid.Column="1" Margin="0,0,0,5"/>

        <Label Content="Email:" Grid.Row="7" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center"/>
        <TextBox x:Name="txtEmail" Grid.Row="7" Grid.Column="1" Margin="0,0,0,5"/>

        <StackPanel Grid.Row="9" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnSave" Content="Save" Width="80" Margin="0,0,10,0" Click="btnSave_Click"/>
            <Button x:Name="btnCancel" Content="Cancel" Width="80" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
